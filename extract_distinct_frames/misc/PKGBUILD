pkgname=python-extract_distinct_frames
pkgver=0.0.1
pkgrel=1
pkgdesc="Extract distinct frames from a video"
arch=('any')
url="https://github.com/dbeley/extract_distinct_frames/"
license=('MIT')
depends=('python' 'python-setuptools' 'python-tqdm', 'python-pillow')
source=("$pkgname-$pkgver.tar.gz::https://github.com/dbeley/extract_distinct_frames/archive/${pkgver}.tar.gz"
		"$pkgname-$pkgver.tar.gz.asc::https://github.com/dbeley/extract_distinct_frames/releases/download/${pkgver}/${pkgver}.tar.gz.asc")

build(){
  cd "extract_distinct_frames-${pkgver}"
  python setup.py build
}

check(){
  cd "extract_distinct_frames-${pkgver}"
  python setup.py test
}

package() {
  cd "extract_distinct_frames-${pkgver}"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1 --skip-build
  install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
